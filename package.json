{
  "name": "vuevuefafa-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "vuevuefafa - Production-ready Vue 3 UI Kit",
  "keywords": [
    "vue",
    "vue3",
    "ui-kit",
    "component-library",
    "design-system"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "build": "pnpm --filter vuevuefafa build",
    "build:all": "pnpm -r build",
    "test": "pnpm --filter vuevuefafa test",
    "test:e2e": "pnpm --filter e2e test",
    "test:a11y": "pnpm --filter e2e test:a11y",
    "lint": "eslint . --ext .vue,.ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .vue,.ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "storybook": "pnpm --filter storybook dev",
    "storybook:build": "pnpm --filter storybook build",
    "playground:dev": "pnpm --filter playground dev",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules .turbo",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{vue,ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
